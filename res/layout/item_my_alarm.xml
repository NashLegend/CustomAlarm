<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="#e4e4e4" >

    <RelativeLayout
        android:id="@+id/aboveview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/item_back"
        android:paddingBottom="@dimen/item_vertical_margin"
        android:paddingLeft="@dimen/item_horizontal_margin"
        android:paddingRight="@dimen/item_horizontal_margin"
        android:paddingTop="@dimen/item_vertical_margin" >

        <TextView
            android:id="@+id/alarmtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_alarm_tag"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/alarmtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarmtag"
            android:text="@string/default_alarm_time"
            android:textColor="#505050"
            android:textSize="16sp"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e2e2" />
    </RelativeLayout>

</RelativeLayout>